@using ElasticSearch.Web.ViewModel

@{
    ViewData["Title"] = "Search";
}
@model List<BlogViewModel>
<div class="container">
    <div class="col-md-10 offset-md-1">
        <form asp-action="Search">
            <div class="mb-3">
                <label>Search(Title,Content,Tags)</label>
                <input name="searchText" class="form-control" value="@ViewBag.SearchText" />
            </div>
            <button type="submit">Search</button>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Veri bulunamamıştır.</div>
}else{ 
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>UserId</th>
                    <th>Tags</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                <tr>
                    <th>@blog.Id</th>
                    <th>@blog.Title</th>
                    <th>@blog.Content</th>
                    <th>@blog.UserId</th>
                    <th>@String.Join(',',blog.Tags)</th>
                    <th>@blog.Created</th>
                </tr>
            }
            </tbody>
        </table> 
}

